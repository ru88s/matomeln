    "react-hot-toast": "^2.6.0",
    "react-tweet": "^3.3.0",
    "wsse": "^6.0.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20260210.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/encoding-japanese": "^2.2.1",
